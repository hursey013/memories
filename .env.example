# Synology connection
NAS_IP="synology.lan"
USER_ID="memories"
USER_PASSWORD="supersecret"
FOTO_TEAM=false

# Behavior & filtering
FAVORITE_PEOPLE=""  # Comma-separated list to prioritize
IGNORED_PEOPLE=""   # Comma-separated list to skip
MIN_YEAR=2000
YEARS_BACK=0
DAY_OFFSET=-1
MIN_WEIGHT=0
INLINE_EMAIL=false  # Set true to embed photos inline in HTML email

# Apprise API (service name when using docker compose)
APPRISE_URL=http://apprise-api:8000
# Stateful mode (recommended): set a KEY in the Apprise API UI and put it here
APPRISE_KEY=
# Stateless mode: provide comma-separated target URLs instead of a key
# APPRISE_URLS=mailto://user:pass@gmail.com,discord://WEBHOOK/ID/TOKEN

# Cron (omit to run once and exit)
CRON_EXPRESSION=0 8 * * *
