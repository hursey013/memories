# Synology
NAS_IP=192.168.1.10
USER_ID=your_user
USER_PASSWORD=your_password
FOTO_TEAM=false

# Apprise API (service name when using docker compose)
APPRISE_URL=http://memories-apprise-api:8000
# Stateful mode (recommended): set a KEY in the Apprise API UI and put it here
APPRISE_KEY=
# Stateless mode: provide comma-separated target URLs instead of a key
# APPRISE_URLS=mailto://user:pass@gmail.com,discord://WEBHOOK/ID/TOKEN

# Thumbnail size (Synology sizes: xs,s,m,l,xl)
THUMBNAIL_SIZE=xl

# Cache
PHOTOS_INDEX_PATH=./cache/photos-index.json
PHOTOS_INDEX_TTL_SECONDS=604800

# HTTP
HTTP_TIMEOUT_MS=15000
HTTP_RETRIES=1

# Scheduling (pick one)
# 1) Randomized (takes precedence when true)
RANDOM_ENABLED=true
DAILY_RATE=0.8
MAX_PER_DAY=2
MIN_GAP_MIN=90
TICK_MINUTES=5
QUIET_START=22:00
QUIET_END=07:30
ACTIVE_DAYS=0,1,2,3,4,5,6
SCHED_STATE_PATH=./cache/schedule-state.json

# 2) Cron (used when RANDOM_ENABLED=false)
# CRON_EXPRESSION=0 8 * * *
