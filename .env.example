# Synology
NAS_IP=192.168.1.10
USER_ID=your_user
USER_PASSWORD=your_password
FOTO_TEAM=false

# Apprise
APPRISE_URL=http://localhost:8000
APPRISE_KEY=memories
# Or (stateless):
# APPRISE_URLS=mailto://USER:APP_PASS@gmail.com,discord://WEBHOOK_ID/WEBHOOK_TOKEN

# Thumbnail size
THUMBNAIL_SIZE=l

# Cache
PHOTOS_INDEX_PATH=./cache/photos-index.json
PHOTOS_INDEX_TTL_SECONDS=604800
# FORCE_REFRESH=1

# HTTP
HTTP_TIMEOUT_MS=15000
HTTP_RETRIES=1

# Cron (used only if RANDOM_ENABLED=false and CRON_EXPRESSION is set)
CRON_EXPRESSION=

# --- Randomized scheduling ---
RANDOM_ENABLED=true
DAILY_RATE=0.8
MAX_PER_DAY=2
MIN_GAP_MIN=90
TICK_MINUTES=5
QUIET_START=22:00
QUIET_END=07:30
ACTIVE_DAYS=0,1,2,3,4,5,6
SCHED_STATE_PATH=./cache/schedule-state.json
