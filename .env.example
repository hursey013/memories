# Synology
NAS_IP=192.168.1.10
USER_ID=your_user
USER_PASSWORD=your_password
FOTO_TEAM=false              # "true" => FotoTeam, else Foto
SEND_BY="day"          # or day|week

# Apprise API (sidecar or remote)
APPRISE_URL=http://synology.lan:8000
# If you use stateful mode in Apprise API (`/add/{KEY}`), set a key name:
APPRISE_KEY=memories
#
# OR (stateless) provide destinations inline each send:
# APPRISE_URLS=mailto://USER:APP_PASS@gmail.com,discord://WEBHOOK_ID/WEBHOOK_TOKEN

# Scheduling
# Set to a cron expression to enable scheduling (e.g., "0 8 * * *"), or leave empty to run once.
CRON_EXPRESSION=
