# Synology
NAS_IP=192.168.1.10
USER_ID=your_user
USER_PASSWORD=your_password
FOTO_TEAM=false

# Apprise
APPRISE_URL=http://localhost:8000
APPRISE_KEY=memories
# Or (stateless):
# APPRISE_URLS=mailto://USER:APP_PASS@gmail.com,discord://WEBHOOK_ID/WEBHOOK_TOKEN

# Thumbnail size
THUMBNAIL_SIZE=l

# Cache
PHOTOS_INDEX_PATH=./cache/photos-index.json
PHOTOS_INDEX_TTL_SECONDS=604800
# FORCE_REFRESH=1

# HTTP
HTTP_TIMEOUT_MS=15000
HTTP_RETRIES=1

# Cron (used only if RANDOM_ENABLED=false and CRON_EXPRESSION is set)
CRON_EXPRESSION=

# --- Randomized scheduling ---
RANDOM_ENABLED=true               # turn on randomized scheduler (overrides CRON_EXPRESSION)
DAILY_RATE=0.8                    # expected sends per active day (λ)
MAX_PER_DAY=2                     # hard cap per day
MIN_GAP_MIN=90                    # minimum minutes between sends
TICK_MINUTES=5                    # how often to “roll the dice”
QUIET_START=22:00                 # no sends between QUIET_START → QUIET_END
QUIET_END=07:30
ACTIVE_DAYS=0,1,2,3,4,5,6         # 0=Sun ... 6=Sat
SCHED_STATE_PATH=./cache/schedule-state.json

