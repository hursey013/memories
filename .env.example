# Synology
NAS_IP=192.168.1.10
USER_ID=your_user
USER_PASSWORD=your_password
FOTO_TEAM=false
IGNORED_PEOPLE=

# Apprise API (service name when using docker compose)
APPRISE_URL=http://memories-apprise-api:8000
# Stateful mode (recommended): set a KEY in the Apprise API UI and put it here
APPRISE_KEY=
# Stateless mode: provide comma-separated target URLs instead of a key
# APPRISE_URLS=mailto://user:pass@gmail.com,discord://WEBHOOK/ID/TOKEN

# HTTP
HTTP_TIMEOUT_MS=15000
HTTP_RETRIES=1

# Cron
CRON_EXPRESSION=*/5 * * * *

# Day-query window
MIN_YEAR=2000
YEARS_BACK=0
SENT_PATH=./cache/sent.json